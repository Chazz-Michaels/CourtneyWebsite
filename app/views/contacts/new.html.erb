<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title></title>
</head>

<body id="new-body">

<div class="containerForFooterPos">


<ul id="contactCol-Wrapper">

  <li class="contactCol ccLeft">
    <div id="courtbooks-pic">
       <%= image_tag('courtbooks.png', :id => 'courtbook') %>
    </div>
  </li>

  <li class="contactCol ccRight">

    <div id="mailer-form">
      <p id="contact-me-header">Contact Me:</p>

      <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        <%= f.input :name, :required => false, input_html: { class: 'f-input' }, label_html: { class: 'f-label-name' } %>
        </br>
        <%= f.input :email, :required => false, input_html: { class: 'f-input' }, label_html: { class: 'f-label-email' } %>
        </br>
        <%= f.input :message, :as => :text, :required => false, input_html: { class: 'f-input-message' }, label_html: { class: 'f-label-message' } %>
        </br>

        <div class= "hidden-form">
          <%= f.input :nickname, :hint => 'Leave this field blank!' %>
        </div>

        <div>
          </br>
          <%= f.button :submit, 'Send Message', :class=> "btn btn-primary" %>
        </div>
      <% end %>
    </div>


  </li>


</ul>

</div>

<div class="clearfix"></div>

<footer>
  <%= render 'layouts/footer' %>
</footer>




</body>
</html>
